{
  "expo": {
    "name": "products-app",
    "slug": "products-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "products-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.productapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.productapp",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
	"android.permission.INTERNET",
        "com.google.android.c2dm.permission.RECEIVE"
      ],
	"usesCleartextTraffic": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Esta app necesita acceso a la ubicaci√≥n para encontrar direcciones cercanas."
        }
        ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "networkSecurityConfig": {
              "cleartextTrafficPermitted": true,
              "domainConfig": [
                {
                  "domains": ["181.49.225.64"],
                  "cleartextTrafficPermitted": true
                }
              ]
            }
          }
        }

	]

    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a40e4d9a-96ff-4ef3-94fc-8c4d2e547dfb"
      },
      "EXPO_PUBLIC_API_URL": "http://181.49.225.64:3001/api/v1",
      "EXPO_PUBLIC_API_BASE_URL": "http://181.49.225.64:3001",
      "EXPO_PUBLIC_STAGE": "production"
    },
    "owner": "angeldacid"
  }
}
